<div class="text-center px-4 sm:px-6 lg:px-8 py-6 mx-auto max-w-md sm:max-w-3xl lg:max-w-7xl">
    <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
    {% for example in examples %}
        <a href="/examples{{ example.route }}" class="pt-6 group">
            <div class="flow-root bg-gray-800 group-hover:bg-gray-600 rounded-lg px-6 pb-8">
                <div class="-mt-6">
                    <div>
                          <span class="inline-flex items-center justify-center p-3 bg-gradient-to-r from-bg-start to-bg-end rounded-md shadow-lg">
                            <span class="h-6 w-6 text-white">
                                {% heroicon "outline", example.icon %}
                            </span>
                          </span>
                    </div>
                    <h3 class="mt-8 text-lg font-medium text-white tracking-tight">{{ example.title }}</h3>
                    <p class="mt-5 text-base text-gray-300">
                        {{ example.description }}
                    </p>
                </div>
            </div>
        </a>
    {% endfor %}
    </div>
</div>

